        <a href="/auth/login" class="btn">Login with Cognito</a>
      <% } else { %>
        <a href="/shopping-list" class="btn">Go to Shopping List</a>
      <% } %>
    </div>

    <div class="features">
      <div class="feature-card">
        <img src="/images/shopping-list.jpeg" alt="Shopping List" 
             onerror="this.src='https://via.placeholder.com/150?text=ðŸ›’'">
